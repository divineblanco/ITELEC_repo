@{
}
@model Student;
<h1 class="title">Create a new Student</h1>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="AddStudent" asp-controller="Student" method="post">

    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input class="form-control" asp-for="FirstName" placeholder="Enter First Name" style="color:black" />
    </div>

    <div class="form-group">
        <label asp-for="LastName"></label>
        <input class="form-control" asp-for="LastName" placeholder="Enter Last Name" style="color:black" />
    </div>

    <div class="form-group">
        <label asp-for="Course"></label>
        <select asp-for="Course" asp-items="@Html.GetEnumSelectList(typeof(Course))" class="form-control" style ="color: black"></select>
    </div>

    <div class="form-group">
        <label asp-for="AdmissionDate"></label>
        <input asp-for="AdmissionDate" class="form-control" style="color: black" />
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" placeholder="Enter Email" style="color:black" />
    </div>

    <div class="form-group">
        <label asp-for="GPA"></label>
        <input class="form-control" asp-for="GPA" placeholder="Enter GPA" style="color:black" />
    </div>

    <br />
    
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
    
</form>