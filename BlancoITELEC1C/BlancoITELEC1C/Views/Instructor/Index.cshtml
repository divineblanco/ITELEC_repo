@model IEnumerable<Instructor>;

<h1 class="title">Instructor List</h1>
<br />
<a class="btn btn-primary" asp-action="AddInstructor">Add Instructor</a>

<table class="table table-dark">
    <tr>
        <th colspan="6">Instructor</th>
    </tr>

    <tr>
        <td>Name</td>
        <td>Is Tenured</td>
        <td>Rank</td>
        <td>Hiring Date</td>
        <td>Details</td>
        <td>Edit</td>
    </tr>

    <tr>
        @foreach (var Instructor in Model)
        {
           <tr>
                <td>@Instructor.InstructorFirstName @Instructor.InstructorLastName</td>
                <td>@Instructor.InstructorIsTenured</td>
                <td>@Instructor.Rank</td>
                <td>@Instructor.HiringDate</td>
                <td><a class="btn btn-primary" asp-action="ShowDetail" asp-route-id="@Instructor.InstructorId">Show Details</a></td>
                <td><a class="btn btn-primary" asp-action="UpdateInstructor" asp-route-id="@Instructor.InstructorId">Update</a></td>
            </tr>
        }
    </tr>
</table>
