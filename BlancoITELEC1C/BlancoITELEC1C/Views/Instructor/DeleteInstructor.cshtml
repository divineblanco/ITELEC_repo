@{
}
@model Instructor;
<h1 class="title">Are you sure you want to delete?</h1>
<form asp-action="DeleteInstructor" asp-controller="Instructor" method="post">
    <div class="form-group">
        <label asp-for="InstructorId" hidden>Id</label>
        <input class="form-control" asp-for="InstructorId" style="color:black" hidden/>
    </div>

    <div class="form-group">
        <label asp-for="InstructorFirstName">First Name</label>
        <input class="form-control" asp-for="InstructorFirstName" placeholder="Enter First Name" style=" color:black" readonly/>
    </div>

    <div class="form-group">
        <label for="InstructorLastName">Last Name</label>
        <input class="form-control" asp-for="InstructorLastName" placeholder="Enter Last Name" style="color:black" readonly />
    </div>

    <br />

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Delete</button>
        <button type="button" onclick="history.back()" class="btn btn-primary">Cancel</button>
    </div>

</form>
