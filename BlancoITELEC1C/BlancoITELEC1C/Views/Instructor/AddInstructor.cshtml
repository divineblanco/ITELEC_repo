@{
}
@model Instructor;
<h1 class="title">Create a new Instructor</h1>
<div asp-validation-summary="All" class="text-danger"></div>
<form asp-action="AddInstructor" asp-controller="Instructor" method="post">

    <div class="form-group">
        <label asp-for="InstructorFirstName"></label>
        <input class="form-control" asp-for="InstructorFirstName" placeholder="Enter First Name" style=" color:black" />
    </div>

    <div class="form-group">
        <label asp-for="InstructorLastName"></label>
        <input class="form-control" asp-for="InstructorLastName" placeholder="Enter Last Name" style="color:black" />
    </div>

    <div class="form-group">
        <label asp-for="Rank"></label>
        <select asp-for="Rank" asp-items="@Html.GetEnumSelectList(typeof(Rank))" class="form-control" style="color: black"></select>
    </div>

    <div class="form-group">
        <label asp-for="HiringDate"></label>
        <input asp-for="HiringDate" class="form-control" style="color: black" />
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" style="color: black" />
    </div>

    <div class="form-group">
        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control" style="color: black" />
    </div>

    <br />

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>

</form>
